<header class="navbar navbar-default">
  <div id="banner_wrapper">
    <%= image_tag "banner.png" %>
    <div id="banner_text_wrapper">
      <h1 id="system_banner_text"><%= t("system_name").upcase %></h1>
      <h2 id="system_banner_slogan"><%= t "slogan" %></h2>
    </div>
  </div>
  <div class="container">
    <nav>
      <ul class="nav navbar-nav">
        <li>
          <%= link_to root_path, title: t("home"), id: "logo" do %>
            <%= image_tag "logo_F.png", class: "img-circle" %>
          <% end %>
        </li>
        <% if logged_in? %>
          <% if current_user_is_admin? %>
            <li>
              <%= link_to t("users_text"), admin_users_path %>
            </li>
          <% end %>
          <li>
            <% if current_user_is_admin? %>
              <%= link_to t("courses_text"), admin_courses_path %>
            <% else %>
              <%= link_to t("courses_text"), courses_path %>
            <% end %>
          </li>
          <% if current_user_is_admin? %>
            <li>
              <%= link_to t("subject_text"), admin_subjects_path %>
            </li>
          <% end %>
        <% end %>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <div class="login_wrapper">
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle bg_transparent"
                data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to (t "view_profile"), current_user %></li>
                <li><%= link_to (t "edit_profile"), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to (t "logout"), logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <%= link_to t("login"), login_path, class: "btn btn-default" %>
          <% end %>
        </div>
      </ul>
    </nav>
  </div>
</header>
