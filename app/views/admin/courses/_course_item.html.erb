<div class="course_item_wrapper col-md-6">
  <div class="course_item">
    <div class="col-md-12">
      <h2 class="course_name">
        <%= link_to course.name, admin_course_path(course) %>
      </h2>

      <div class="dropdown course_item_option">
        <span class="glyphicon glyphicon glyphicon-cog"
          data-toggle="dropdown" aria-hidden="true"></span>
        <ul class="dropdown-menu">
          <li>
            <%= link_to t("admin.courses.assign_users"),
              admin_course_user_courses_path(course) %>
          </li>
          <li>
            <%= link_to t("admin.courses.course_item.Edit"),
              edit_admin_course_path(course) %>
          </li>
          <li>
            <%= link_to t("admin.courses.course_item.delete"),
              admin_course_path(course),
              method: :delete,
              data: {confirm: t("admin.courses.confirm_delete")} %>
          </li>
        </ul>
      </div>
    </div>
    <div class="col-md-12">
      <div class="course_created_date">
        <%= t "admin.courses.course_item.date_created" %>
        <%= course.created_at.strftime(t "date_format") %>
      </div>

      <div class="course_instruction">
        <p><%= course.instructions %></p>
      </div>

      <div class="course_info">
        <div class="col-md-4 start_course_date">
          <div class="popover top">
            <div class="arrow"></div>
            <div class="popover-content">
              <%= course.start_date.strftime(t "date_format") %>
            </div>
          </div>
          <span class="label label-success">
            <%= t "admin.courses.course_item.start_date" %>
          </span>
        </div>

        <div class="col-md-4 course_action_wrapper">
          <p class="number_of_trainees">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <%= course.users.count %>
            <%= t "admin.courses.course_item.trainees" %>
          </p>

          <% unless current_user.trainee? %>
            <div class="col-md-12 course_action_<%= course.id %>">
              <% case course.status %>
              <% when "pending" %>
                <%= link_to t("admin.courses.course_item.start_course"), admin_course_path(course),
                  data: {
                    confirm: t("admin.courses.course_item.confirm_start"),
                    status: Settings.status.started_text
                  },
                  class: "btn btn-primary" %>
              <% when "started" %>
                <%= link_to t("admin.courses.course_item.finish_course"), admin_course_path(course),
                  data: {
                    confirm: t("admin.courses.course_item.confirm_finish"),
                    status: Settings.status.finished_text
                  },
                  class: "btn btn-danger" %>
              <% when "finished" %>
                  <%= button_tag t("admin.courses.course_item.inactive_course"),
                    class: "btn btn-default disabled" %>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="col-md-4 end_course_date">
          <div class="popover top">
            <div class="arrow"></div>
            <div class="popover-content">
              <%= course.end_date.strftime(t "date_format") %>
            </div>
          </div>

          <span class="label label-warning">
            <%= t "admin.courses.course_item.end_date" %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
